{
    "manifest_version": 2,
    "name": "TronLink",
    "version": "2.0.1",
    "version_name": "2.0.1",
    "description": "An interactive browser extension for signing, receiving and broadcasting TRON transactions",
    "author": "Kondax <kondaxsolutions@gmail.com>",
    "content_security_policy": "script-src 'self' 'sha256-IThiKMnsg0UHaLmP7sJxZpd/ohvINImwjxFJyxGFSlk='",
    "permissions": [
        "storage",
        "unlimitedStorage",
        "clipboardWrite",
        "activeTab"
    ],
    "browser_action": {
        "default_popup": "packages/popup/build/index.html",
        "default_title": "TronLink"
    },
    "icons": {
		"128": "packages/popup/static/icon.png"
    },
    "background": {
        "scripts": [
            "dist/backgroundScript.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "file://*/*",
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "dist/contentScript.js"
            ],
            "run_at": "document_start",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        "dist/pageHook.js"
    ]
}